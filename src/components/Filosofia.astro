---
// Filosof√≠a section component.  It details the guiding principles and
// ethos behind the service.  There are subsections for introduction,
// focus (enfoque), mission, reasons to choose and audience.

const { content } = Astro.props;
---
<section id="filosofia" class="py-16 bg-gray-100 px-6 md:px-0">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
    {content.title}
  </h2>
  <div class="max-w-3xl mx-auto space-y-4 text-gray-700">
    {content.intro.map((p) => (<p>{p}</p>))}
  </div>
  <div class="max-w-3xl mx-auto mt-8">
    <h3 class="text-2xl font-semibold mb-4 text-gray-800">Enfoque</h3>
    <ul class="list-disc list-inside space-y-2 text-gray-700">
      {content.enfoque.map((item) => (<li>{item}</li>))}
    </ul>
  </div>
  <div class="max-w-3xl mx-auto mt-8 text-gray-700">
    <h3 class="text-2xl font-semibold mb-4 text-gray-800">Objetivo</h3>
    <p>{content.objetivo}</p>
  </div>
  <div class="max-w-3xl mx-auto mt-8 text-gray-700">
    <h3 class="text-2xl font-semibold mb-4 text-gray-800">{content.porqueElegirme.title}</h3>
    <ul class="list-disc list-inside space-y-2">
      {content.porqueElegirme.items.map((item) => (<li>{item}</li>))}
    </ul>
  </div>
  <div class="max-w-3xl mx-auto mt-8 text-gray-700">
    <h3 class="text-2xl font-semibold mb-4 text-gray-800">{content.aQuienAcompano.title}</h3>
    {content.aQuienAcompano.content.map((p) => (<p class="mb-2">{p}</p>))}
  </div>
</section>