---
// Contacto (contact) section component.  Provides a simple form
// capturing essential details from prospective clients.  A thank
// you notice is displayed below the form to set expectations.

const { content } = Astro.props;
---
<section id="contacto" class="py-16 px-6 md:px-0">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
    {content.title}
  </h2>
  <div class="max-w-3xl mx-auto space-y-4 text-gray-700">
    {content.description.map((p) => (<p>{p}</p>))}
  </div>
  <form class="max-w-3xl mx-auto mt-8 grid grid-cols-1 gap-4">
    {content.fields.map((field, idx) => (
      <input
        type="text"
        placeholder={field}
        class="p-3 border border-gray-300 rounded-md placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
        key={idx}
      />
    ))}
    <button
      type="submit"
      class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-md transition"
    >
      Enviar
    </button>
  </form>
  <div class="max-w-3xl mx-auto mt-8 space-y-2 text-center text-sm text-gray-600">
    {content.gracias.map((p) => (<p>{p}</p>))}
  </div>
</section>