---
// Proceso section component.  Displays the step‑by‑step workflow
// followed with each client.  Each step is rendered in a card for
// visual separation.

const { content } = Astro.props;
---
<section id="proceso" class="py-16 px-6 md:px-0">
  <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">
    {content.title}
  </h2>
  <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    {content.steps.map((step) => (
      <div class="p-6 border border-gray-200 rounded-lg shadow-sm bg-white">
        <h3 class="text-xl font-semibold mb-2 text-blue-700">{step.step}</h3>
        <p class="text-gray-700">{step.description}</p>
      </div>
    ))}
  </div>
  <p class="max-w-3xl mx-auto mt-8 text-center text-gray-600">{content.note}</p>
</section>