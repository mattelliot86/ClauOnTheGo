---
// Hero section component.  It displays the main headline and a
// succinct explanation of the service offering, as well as CTA
// buttons and personal branding.  Content is passed via props.

const { content } = Astro.props;
---
<section id="hero" class="min-h-screen flex flex-col justify-center items-center text-center pt-24 pb-16 bg-gray-50">
  <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-800">
    {content.title}
  </h1>
  <h2 class="text-xl md:text-2xl font-medium mb-4 text-gray-600">
    {content.subtitle}
  </h2>
  <div class="max-w-2xl mx-auto mb-6 space-y-2 text-gray-600">
    {content.description.map((line) => (<p>{line}</p>))}
  </div>
  <div class="flex flex-wrap justify-center gap-4 mb-8">
    {content.actions.map((action) => (
      <a href="#contacto" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded transition">
        {action}
      </a>
    ))}
  </div>
  <div class="mt-4 text-center">
    <h3 class="text-2xl font-semibold text-gray-800">{content.name}</h3>
    <p class="text-gray-600 italic">{content.role}</p>
  </div>
</section>